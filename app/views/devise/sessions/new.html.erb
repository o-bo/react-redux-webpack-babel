<div class="mdl-grid" style="margin-top: 100px;">
  <div class="mdl-cell mdl-cell--4-col"></div>
  <div class="mdl-cell mdl-cell--4-col">
    <div class="mdl-card mdl-shadow--4dp" style="width: 100%;">
      <div class="mdl-card__title" style="color: white; height: 100px; background-color: rgb(63,81,181)">
        React Redux Webpack Babel with Rails
      </div>
      <div class="mdl-card__content mdl-tabs mdl-js-tabs mdl-js-ripple-effect">
        <div class="mdl-tabs__tab-bar">
            <a href="#login-panel" class="mdl-tabs__tab is-active">Sign in</a>
            <a href="#signup-panel" class="mdl-tabs__tab">Sign up</a>
            <a href="#forgot-panel" class="mdl-tabs__tab">Forgot password?</a>
        </div>

        <div class="mdl-grid">
          <div class="mdl-cell mdl-cell--1-col"></div>
          <div class="mdl-cell mdl-cell--10-col">
            <div class="mdl-tabs__panel is-active" id="login-panel">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="width: 100%;">
                  <input class="mdl-textfield__input" type="email" id="<%= resource_name %>_email" name="<%= resource_name %>[email]">
                  <label class="mdl-textfield__label" for="<%= resource_name %>_email">Email</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="width: 100%;">
                  <input class="mdl-textfield__input" type="password" id="<%= resource_name %>_password" name="<%= resource_name %>[password]">
                  <label class="mdl-textfield__label" for="<%= resource_name %>_password">Password</label>
                </div>
                <% if devise_mapping.rememberable? -%>
                  <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="<%= resource_name %>_remember_me" style="margin-top: 10px; margin-bottom: 10px;">
                    <input type="checkbox" id="<%= resource_name %>_remember_me" class="mdl-checkbox__input" name="<%= resource_name %>[remember_me]">
                    <span class="mdl-checkbox__label">Remember me</span>
                  </label>
                <% end -%>

                <div class="actions" style="margin-top: 10px;">
                  <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent" style="width: 100%;">
                    Sign in
                  </button>
                </div>
              <% end %>
            </div>
            <div class="mdl-tabs__panel" id="signup-panel">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="width: 100%;">
                  <input class="mdl-textfield__input" type="email" id="<%= resource_name %>_email" name="<%= resource_name %>[email]">
                  <label class="mdl-textfield__label" for="<%= resource_name %>_email">Email</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="width: 100%;">
                  <input class="mdl-textfield__input" type="password" id="<%= resource_name %>_password" name="<%= resource_name %>[password]">
                  <label class="mdl-textfield__label" for="<%= resource_name %>_password">Password</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="width: 100%;">
                  <input class="mdl-textfield__input" type="password" id="<%= resource_name %>_password_confirmation" name="<%= resource_name %>[password_confirmation]">
                  <label class="mdl-textfield__label" for="<%= resource_name %>_password_confirmation">Password confirmation</label>
                </div>

                <div class="actions" style="margin-top: 10px;">
                  <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent" style="width: 100%;">
                    Sign up
                  </button>
                </div>
              <% end %>
            </div>
            <div class="mdl-tabs__panel" id="forgot-panel">
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= devise_error_messages! %>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="width: 100%;">
                  <input class="mdl-textfield__input" type="email" id="<%= resource_name %>_email" name="<%= resource_name %>[email]">
                  <label class="mdl-textfield__label" for="<%= resource_name %>_email">Email</label>
                </div>

                <div class="actions" style="margin-top: 10px;">
                  <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent" style="width: 100%;">
                    Send me reset password instructions
                  </button>
                </div>
              <% end %>
            </div>
          </div>
          <div class="mdl-cell mdl-cell--1-col"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="mdl-cell mdl-cell--4-col"></div>
</div>
